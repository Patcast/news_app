<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="320dp"
                                                   android:layout_height="140dp"
                                                   android:paddingVertical="10dp"
                                                   android:paddingHorizontal="10dp"
                                                   android:id="@+id/recView_item_articles"
                                                   android:padding="20dp"
>


    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/black" app:cardCornerRadius="15dp"
            app:cardElevation="20dp" app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false" android:id="@+id/cardView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/placeholder"
                    android:id="@+id/imageView2" android:scaleType="centerCrop"/>
            <TextView
                    android:id="@+id/header_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Best Tech Articles"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dm_serif_display"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>